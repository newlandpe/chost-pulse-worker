{
  "name": "chost-pulse-worker",
  "version": "1.0.0",
  "description": "Serverless worker for game server monitoring with multi-platform support",
  "main": "src/platforms/cloudflare.ts",
  "scripts": {
    "dev:cf": "wrangler dev",
    "deploy:cf": "wrangler deploy",
    "dev:vercel": "vercel dev",
    "dev:netlify": "netlify dev",
    "build:vercel": "esbuild src/platforms/vercel.ts --bundle --format=esm --outfile=api/index.js --platform=node --external:@vercel/kv --external:@netlify/blobs --external:@upstash/redis",
    "build:netlify": "esbuild src/platforms/netlify.ts --bundle --format=cjs --outfile=api/index.js --platform=node --external:@vercel/kv --external:@netlify/blobs",
    "test": "vitest run"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@netlify/blobs": "^8.1.0",
    "@upstash/redis": "^1.34.4",
    "@vercel/kv": "^3.0.0",
    "badge-maker": "^5.0.2",
    "esbuild": "^0.24.0",
    "hono": "^4.11.9",
    "simple-icons": "^16.7.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.8",
    "@cloudflare/workers-types": "^4.20250115.0",
    "@types/node": "^25.2.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.3",
    "wrangler": "^4.61.1"
  }
}
